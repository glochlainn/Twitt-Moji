{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }}-
    {{ user.username }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block body %}
    <main class="container">
        <div class="py-5">
            <div class="profile-header mb-md-5 mb-4 mt-5 d-flex flex-md-row flex-column align-items-md-center justify-content-between">
                <div class="d-flex flex-md-row flex-column align-items-md-center">
                    <img class="me-4 mb-3 mb-md-0" src="{{ user.avatar ?? "https://stonegatesl.com/wp-content/uploads/2021/01/avatar-300x300.jpg" }}" alt="profile-pic-{{ user.username }}">
                    <div>
                        <h1 class="h3 fw-bold">{{ user.username }}</h1>
                        <div class="follows d-flex flex-row align-items-center">
                            <a a type="button" data-bs-toggle="modal" data-bs-target="#abonnements" class="h5 me-3">
                                <span class="fw-bold">{{ user.follows|length }}</span>
                                abonnements
                            </a>
                            <a a type="button" data-bs-toggle="modal" data-bs-target="#abonnÃ©s" class="h5">
                                <span class="fw-bold">{{ user.followedBy|length }}</span>
                                abonnÃ©s
                            </a>
                        </div>
                    </div>
                </div>
                <div class="mt-3 mt-md-0">
                    {% if app.user == user %}
                        <a class="btn btn-primary fw-bold" href="#">
                            Ã‰diter le profil
                            <i class="fas fa-pen ms-1"></i>
                        </a>
                    {% else %}
                        <a class="btn btn-primary fw-bold" href="#">
                            S'abonner
                            <i class="fas fa-angle-right ms-1"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
            <h2 class="h2 text-primary mb-3 fw-bold">Twitt'Mojis de
                {{ user.username }}
            </h2>
            {% for tweet in user.tweets %}
                <div class="tweet-card d-flex flex-row align-items-center mb-3 p-4">
                    <img class="me-3 align-self-start" src="{{ tweet.user.avatar ?? "https://stonegatesl.com/wp-content/uploads/2021/01/avatar-300x300.jpg" }}" alt="avatar-picture-{{ tweet.user.username ?? " bzzz"}}">
                    <div class="d-flex flex-column">
                        <h2 class="h5 me-2 mt-0 mb-2 fw-bold">
                            <a href="{{ path("profile", {username: tweet.user.username}) }}">
                                {{ tweet.user.username }}
                            </a>
                        </h2>
                        <h3 class="mt-0 mb-3">
                            <i class="far fa-clock me-1"></i>
                            {% if date(tweet.tweetedAt) > date('-1days', 'Europe/Paris') %}
                                {{ tweet.tweetedAt|ago }}
                            {% else %}
                                {{ tweet.tweetedAt|date('d/m/Y') }}
                            {% endif %}
                        </h3>
                        <p class="mb-0">{{ tweet.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Modal abonnements -->
        <div class="modal fade" id="abonnements" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-dark p-2">
                    <div class="modal-header">
                        <h3 class="h3 modal-title text-primary fw-bold" id="staticBackdropLabel">Abonnements</h3>
                        <a type="button" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <div class="modal-body">
                        {% if user.follows is empty %}
                            <h4 class="h6">Vous ne suivez personne pour le moment ðŸ¤ª</h4>
                        {% else %}
                            {% for follow in user.follows %}
                                <div class="user-card my-2 d-flex flex-row align-items-center">
                                    <img class="me-3" src="{{ follow.followed.avatar ?? "https://stonegatesl.com/wp-content/uploads/2021/01/avatar-300x300.jpg" }}" alt="profile-pic-{{ follow.followed.username }}">
                                    <div>
                                        <a class="text-white fw-bold mb-1" href="{{ path("profile", {username: follow.followed.username}) }}">{{ follow.followed.username }}</a>
                                        <div class="d-flex flex-row align-items-center">
                                            <p class="mb-0 me-2">
                                                <span class="fw-bold">{{ follow.followed.follows|length }}</span>
                                                abonnements
                                            </p>
                                            <p class="m-0">
                                                <span class="fw-bold">{{ follow.followed.followedBy|length }}</span>
                                                abonnÃ©s
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal abonnÃ©s -->
        <div class="modal fade" id="abonnÃ©s" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-dark p-2">
                    <div class="modal-header">
                        <h3 class="h3 modal-title text-primary fw-bold" id="staticBackdropLabel">AbonnÃ©s</h3>
                        <a type="button" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <div class="modal-body">
                        {% if user.followedBy is empty %}
                            <h4 class="h6">Personne ne vous suit pour le moment ðŸ˜ª</h4>
                        {% else %}
                            {% for follow in user.followedBy %}
                                <div class="user-card my-2 d-flex flex-row align-items-center">
                                    <img class="me-3" src="{{ follow.follower.avatar ?? "https://stonegatesl.com/wp-content/uploads/2021/01/avatar-300x300.jpg" }}" alt="profile-pic-{{ follow.follower.username }}">
                                    <div>
                                        <a class="text-white fw-bold mb-1" href="{{ path("profile", {username: follow.follower.username}) }}">{{ follow.follower.username }}</a>
                                        <div class="d-flex flex-row align-items-center">
                                            <p class="mb-0 me-2">
                                                <span class="fw-bold">{{ follow.follower.follows|length }}</span>
                                                abonnements
                                            </p>
                                            <p class="m-0">
                                                <span class="fw-bold">{{ follow.follower.followedBy|length }}</span>
                                                abonnÃ©s
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
